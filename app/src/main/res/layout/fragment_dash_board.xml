<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant_main"
        tools:context=".ui.DashBoardFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="visible">


            <ScrollView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Welcome Back"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView

                            android:background="@drawable/gradiant_part"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/addRoomsCardView"
                            android:layout_height="130dp"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent">

                            <RelativeLayout
                                android:background="@drawable/gradiant_part"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">


                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_height="80dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="100dp"
                                    android:src="@drawable/ic_room" />


                                <TextView

                                    android:layout_alignParentLeft="true"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="25dp"
                                    android:layout_width="wrap_content"
                                    android:text="Add Rooms"
                                    android:textColor="@android:color/white"
                                    android:textSize="25dp" />

                                <TextView

                                    android:layout_alignParentLeft="true"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="55dp"
                                    android:layout_width="wrap_content"
                                    android:text="View All Rooms"
                                    android:textColor="@android:color/white" />


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout


                        android:clipToPadding="false"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:background="@drawable/gradiant_part"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/notificationsCardView"
                            android:layout_height="130dp"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent">

                            <RelativeLayout
                                android:background="@drawable/gradiant_part"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">


                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="100dp"
                                    android:src="@drawable/ic_notifications_none_black_24dp" />

                                <TextView

                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_width="wrap_content"
                                    android:text="Notification"
                                    android:textColor="@color/white"
                                    android:textSize="25dp" />

                                <TextView
                                    android:layout_alignParentLeft="true"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="70dp"
                                    android:layout_width="wrap_content"
                                    android:text="View Notifications"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout


                        android:clipToPadding="false"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView

                            android:background="@drawable/gradiant_part"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/viewRoomsCardView"
                            android:layout_height="130dp"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent">

                            <RelativeLayout
                                android:background="@drawable/gradiant_part"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">


                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_height="80dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="100dp"
                                    android:src="@drawable/ic_svg" />

                                <TextView

                                    android:layout_alignParentLeft="true"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="25dp"
                                    android:layout_width="wrap_content"
                                    android:text="View Rooms"
                                    android:textColor="@color/white"
                                    android:textSize="25dp" />

                                <TextView
                                    android:layout_alignParentLeft="true"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="60dp"
                                    android:layout_width="wrap_content"
                                    android:text="View All Rooms"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:text="Powered By Electrosoft"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <View
                        android:background="@color/white"
                        android:layout_height="1dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="90dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent" />

                </LinearLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>