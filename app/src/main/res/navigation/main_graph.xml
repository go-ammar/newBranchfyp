<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.electrosoft.electrosoftnew.ui.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/main_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.electrosoft.electrosoftnew.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_forgotpass"
            app:destination="@id/forgotpass" />
        <action
            android:id="@+id/action_loginFragment_to_homeLandingActivity"
            app:destination="@id/homeLandingActivity"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/forgotpass"
        android:name="com.electrosoft.electrosoftnew.ui.ForgotPassFragment"
        android:label="fragment_forgotpass"
        tools:layout="@layout/fragment_forgotpass" >
        <action
            android:id="@+id/action_forgotpass_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <activity
        android:id="@+id/homeLandingActivity"
        android:name="com.electrosoft.electrosoftnew.ui.HomeLandingActivity"
        android:label="HomeLandingActivity" >
    <argument
        android:name="clearBackStack"
        app:argType="boolean"
        android:defaultValue="true" />
</activity>


</navigation>